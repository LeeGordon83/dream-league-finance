        <tr>
            <td>@Html.LabelFor(model => Model.TotalIn)</td>
            <td style="color:blue">@Html.DisplayFor(model => Model.TotalIn)</td>
            <td style="color:red">@Html.DisplayFor(model => Model.CurrentTotalIn)</td>
            <td></td>
            <td>@Html.LabelFor(model => Model.TotalOut)</td>
            <td style="color:blue">@Html.DisplayFor(model => Model.TotalOut)</td>
            <td style="color:red">@Html.DisplayFor(model => Model.CurrentTotalOut)</td>
        </tr>
    </tbody>
</table>
}
else
{
<h2>No Balance Data</h2>
}