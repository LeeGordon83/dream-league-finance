            <td></td>
            <td></td>
            <td>@Html.LabelFor(model => Model.WeeklyPrize)</td>
            <td>@Html.DisplayFor(model => Model.WeeklyPrize)</td>
            <td>@Html.DisplayFor(model => Model.WeeklyPrizeOut)</td>
