            <td>@Html.DisplayFor(model => Model.FiverDrawsOut)</td>
        </tr>
        <tr>
            <td>@Html.LabelFor(model => Model.CupEntry)</td>
            <td>@Html.DisplayFor(model => Model.CupEntry)</td>
            <td></td>
            <td></td>
            <td>@Html.LabelFor(model => Model.EndOfSeason)</td>
            <td>@Html.DisplayFor(model => Model.EndOfSeason)</td>
            <td>@Html.DisplayFor(model => Model.EndOfSeasonOut)</td>
        </tr>
