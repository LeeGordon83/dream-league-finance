<!DOCTYPE html>
<html>
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Dream League Finance</title>
    <link href="~/images/Icon.ico" rel="shortcut icon" type="image/x-icon" />
    @Scripts.Render("~/bundles/modernizr")
    @Scripts.Render("~/bundles/jquery")
    @*@Scripts.Render("~/bundles/jqueryval")*@
    @Scripts.Render("~/bundles/bootstrap")
    @Scripts.Render("~/bundles/jqueryui")
    @Styles.Render("~/Content/bootstrap")
    @Styles.Render("~/Content/themes/base/css")
    @Styles.Render("~/Content/css")


    @RenderSection("scripts", required: false)
    <link rel="stylesheet" href="//code.jquery.com/ui/1.11.2/themes/smoothness/jquery-ui.css">



</head>
<body>
    <div class="navbar navbar-inverse navbar-fixed-top">
        <div class="container">
            <div class="navbar-header">
                <button type="button" class="navbar-toggle" data-toggle="collapse" data-target=".navbar-collapse">
                    <span class="icon-bar"></span>
                    <span class="icon-bar"></span>
                    <span class="icon-bar"></span>
                </button>
                @Html.ActionLink("Dream League Finance", "Index", "Home", new { area = "" }, new { @class = "navbar-brand" })
            </div>
            <div class="navbar-collapse collapse">
                <ul class="nav navbar-nav">


                    <li class="dropdown">
                        <a href="#" class="dropdown-toggle" data-toggle="dropdown" role="button" aria-expanded="false">Finance Overviews<span class="caret"></span></a>
                        <ul class="dropdown-menu" role="menu">
                            <li>@Html.ActionLink("All Transactions", "allTransactions", "Transaction")</li>
                            <li>@Html.ActionLink("Paid In", "PaidIn", "Finance")</li>
                            <li>@Html.ActionLink("Credit", "CreditOverview", "Finance")</li>
                            <li>@Html.ActionLink("Balance Sheet", "BalanceOverview", "Finance")</li>
                            <li>@Html.ActionLink("Winnings Breakdown", "WinningsOverview", "Finance")</li>
                            <li>@Html.ActionLink("Individual Winnings", "IndividualWinnings", "Finance")</li>
                            <li>@Html.ActionLink("Game Weeks", "weekView", "Finance")</li>
                        </ul>
                    </li>

                    <li>@Html.ActionLink("About", "About", "Home")</li>
                    <li>@Html.ActionLink("History", "History", "History")</li>

                    <li>@Html.ActionLink("Transaction", "Index", "Transaction")</li>
                    @if (User.IsInRole("Admin"))
                    {
                        <li class="dropdown">
                            <a href="#" class="dropdown-toggle" data-toggle="dropdown" role="button" aria-expanded="false">Admin <span class="caret"></span></a>
                            <ul class="dropdown-menu" role="menu">
                                <li>@Html.ActionLink("Season", "seasonView", "Admin")</li>
                                <li>@Html.ActionLink("Managers", "Managers", "Admin")</li>
                                <li>@Html.ActionLink("Prizes", "Prizes", "Admin")</li>
                                <li>@Html.ActionLink("Fees", "Fees", "Admin")</li>
                                <li>@Html.ActionLink("Email Preview", "EmailViewSelect", "Admin")</li>
                                <li>@Html.ActionLink("Send Email", "Send", "Admin")</li>
                                <li>@Html.ActionLink("Run Weekly API", "RunWeeklyAPI", "Admin")</li>
                                <li>@Html.ActionLink("Add Season History", "RunSeasonHistory", "History")</li>

                            </ul>
                        </li>
                    }
                    </ul>
                @Html.Partial("_LoginPartial")
            </div>
        </div>
    </div>
    <div class="container body-content">
        @RenderBody()
        <div class="container row">
            <hr />

            <footer class="row">
                <div class="col-md-10">

                    <p>&copy; @DateTime.UtcNow.Year - GeordieFoo</p>
                    <address>
                        <strong>Email:</strong>   <a href="mailto:dreamleaguefinance@hotmail.com?Subject=Dream League Finance Enquiry" target="_top">dreamleaguefinance@hotmail.com</a><br />
                    </address>
                 </div>
</footer>
        </div>
        </div>


    <script>
        $(function () {

            $.ajaxSetup({
                cache: false
            });
        });
    </script>
</body>
</html>
