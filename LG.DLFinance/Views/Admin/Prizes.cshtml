@model IEnumerable<LG.DLFinance.Models.Prizes>

@{
    ViewBag.Title = "Prizes";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<h2>Prizes</h2>
<br />
<p>
    @Html.ActionLink("Create New", "createPrize")
</p>
<hr />
<h4>League Prizes</h4>
<table class="table">
    <tr>
        <th>
            @Html.DisplayNameFor(model => model.PrizeType)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.PrizeAmount)
        </th>
        <th></th>
    </tr>

    @foreach (var item in Model.Where(x => x.LeaguePrize == true))
    {
        <tr>
            <td>
                @Html.DisplayFor(modelItem => item.PrizeType)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.PrizeAmount)
            </td>
            @Html.HiddenFor(modelItem => item.PrizesId)
            <td>
                @Html.ActionLink("Edit", "editPrizes", new { prizeId = item.PrizesId })
            </td>
        </tr>
    }


</table>

<h4>Other Prizes</h4>
<table class="table">
    <tr>
        <th>
            @Html.DisplayNameFor(model => model.PrizeType)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.PrizeAmount)
        </th>
        <th></th>
    </tr>

    @foreach (var item in Model.Where(x => x.LeaguePrize == false))
    {
        <tr>
            <td>
                @Html.DisplayFor(modelItem => item.PrizeType)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.PrizeAmount)
            </td>
            @Html.HiddenFor(modelItem => item.PrizesId)
            <td>
                @Html.ActionLink("Edit", "editPrizes", new { prizeId = item.PrizesId })
            </td>
        </tr>
    }
    </table>
