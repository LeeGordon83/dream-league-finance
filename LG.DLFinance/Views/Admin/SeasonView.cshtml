@model LG.DLFinance.ViewModels.SeasonViewModel

@{
    ViewBag.Title = "seasonView";
    Layout = "~/Views/Shared/_Layout.cshtml";
}


<script type="text/javascript" src="/Scripts/jquery.date.validate.js"></script>

<h2>Season</h2>
<br />
<hr />
@if (ViewBag.NewSeason == "New")
{
    using (Html.BeginForm())
    {
        @Html.AntiForgeryToken()
        <h4>Add Season</h4>
        <br />
        <div class="form-horizontal">


            @Html.ValidationSummary(true, "", new { @class = "text-danger" })
            <div class="form-group">
                @Html.LabelFor(model => model.WeekStartDate, htmlAttributes: new { @class = "control-label col-md-2" })
                <div class="col-md-10">
                    @Html.EditorFor(model => model.WeekStartDate, new { htmlAttributes = new { @class = "date-picker form-control", @id = "datepicker", @type = "text" } })
                    @Html.ValidationMessageFor(model => model.WeekStartDate, "", new { @class = "text-danger" })
                </div>
            </div>

            @Html.ValidationSummary(true, "", new { @class = "text-danger" })
            <div class="form-group">
                @Html.LabelFor(model => model.NumberofWeeks, htmlAttributes: new { @class = "control-label col-md-2" })
                <div class="col-md-10">
                    @Html.EditorFor(model => model.NumberofWeeks, new { htmlAttributes = new { @class = "form-control" } })
                    @Html.ValidationMessageFor(model => model.NumberofWeeks, "", new { @class = "text-danger" })
                </div>
            </div>

            <div class="form-group">
                <div class="col-md-offset-2 col-md-10">
                    <input type="submit" value="Create New Season" class="btn btn-default" />
                </div>
            </div>
        </div>
    }
}
else
{


    {
        Html.RenderAction("_CurrentSeason", "Admin");
    }
}

<script>
    $(function () {
        $("#datepicker").datepicker({
            dateFormat: 'dd/mm/yy',
            showAnim: 'slideDown'
        });
    })
</script>